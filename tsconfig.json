{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "react",
    "outDir": "lib"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.stories.tsx", "src/**/*.spec.tsx", "src/**/*.spec.ts"]
}
